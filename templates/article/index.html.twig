{% extends 'base.html.twig' %}

{% block title %}Tous les Articles
{% endblock %}

{% block body %}

	<ul>
		{% for article in articles %}
			<li>
				<a href="{{ path('article_show', { 'id': article.id }) }}">{{ article.title }}</a>
				<small>Publi√© le
					{{ article.createdAt|date('Y-m-d') }}
					par
					{{ article.author }}</small>
				{% if article.isPremium %}
					<span style="color: gold;">[Premium]</span>
				{% endif %}
			</li>
		{% endfor %}
	</ul>
{% endblock %}
